
<MSnackbar @bind-Value="_show" Dark Timeout="Timeout">
    <ChildContent>
        @_message
    </ChildContent>
    <ActionContent>
        <MButton Color="pink" Text OnClick="Close">Close</MButton>
    </ActionContent>
</MSnackbar>

@code {
    private bool _show;

    private string _message = "";

    [Parameter]
    public int Timeout { get; set; } = 3000;

    public void Show(string message)
    {
        _message = message;
        _show = true;
        StateHasChanged();
    }


    public void Close() => _show = false;

}